<?php
get_header();
echo	"<div	id	=	'body_left'	>";
if (have_posts()) :
   while (have_posts()) :
      the_post();
      the_content();
   endwhile;
endif;

echo	"</div>	<div	id	=	'body_center'	>";
if (have_posts()) :
   while (have_posts()) :
      the_post();
      the_content();
   endwhile;
endif;

echo	"</div>	<div	id	=	'body_right'	>";
if (have_posts()) :
   while (have_posts()) :
      the_post();
      the_content();
   endwhile;
endif;
echo	"</div>";
 get_footer();
?>